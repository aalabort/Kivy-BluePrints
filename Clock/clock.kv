
ClockRoot

<ClockRoot>
    time_prop: time
    sw_display_seconds: stop_watch
    orientation: 'vertical'
    button_start: button_start
    button_reset: button_reset

    RobotoLabel:
        id: time
        text: '[b]00[/b]:00:00'

    BoxLayout:
        height: 20
        orientation: 'horizontal'
        padding: 50
        spacing:50
        Button:
            id: button_start
            text: 'Start'
            font_name: 'Roboto'
            bold: True
            font_size: 25
            on_press: app.start_stop()
        Button:
            id: button_reset
            text: 'Reset'
            font_name: 'Roboto'
            font_size: 25
            bold: True
            on_press: app.reset()

    RobotoLabel:
        id: stop_watch
        text: '0'

<RobotoLabel@Label>:
    font_size: 60
    font_name: 'Roboto'
    markup: True
<RobotoButton@Button>:
    font_name: 'Roboto'
    font_size: 25
    bold:True
